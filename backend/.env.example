# Docker Configuration
POSTGRES_USER=arxiv_user
POSTGRES_PASSWORD=arxiv_password
POSTGRES_DB=arxiv_rag
DB_PORT=5432
BACKEND_PORT=8000
FRONTEND_PORT=5173

# Database
POSTGRES_URL=postgresql+asyncpg://user:password@localhost:5432/arxiv_rag

# LLM Provider Configuration
DEFAULT_LLM_PROVIDER=openai

# OpenAI Configuration
OPENAI_API_KEY=sk-your-key-here
OPENAI_ALLOWED_MODELS=gpt-4o-mini,gpt-4o,gpt-4-turbo

# Z.AI Configuration
ZAI_API_KEY=your-zai-api-key
ZAI_ALLOWED_MODELS=glm-4.6,glm-4.5,glm-4-32b-0414-128k

# Jina Embeddings
JINA_API_KEY=jina_your-key-here

# Search Configuration
DEFAULT_TOP_K=3
RRF_K=60

# Chunking Configuration
CHUNK_SIZE_WORDS=600
CHUNK_OVERLAP_WORDS=100
MIN_CHUNK_WORDS=100

# Agent Configuration
GUARDRAIL_THRESHOLD=75
MAX_RETRIEVAL_ATTEMPTS=3

# Application
DEBUG=false
LOG_LEVEL=INFO
